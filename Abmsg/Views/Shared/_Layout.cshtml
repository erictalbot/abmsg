<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
    @RenderSection("scripts", required: false)
    @RenderSection("facebookMetaTags", required: false)
</head>
<body style="background-image: url(/images/background.png); background-position: right; background-repeat: no-repeat">
    @RenderSection("facebookScripts", required: false)
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <img src="~/Images/logo.jpg" width="225"  /><br />
                </p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Nouvelles", "Index", "Home")</li>
                        <li>@Html.ActionLink("Responsables", "Responsables", "Home")</li>
                        <li>@Html.ActionLink("Équipes", "Teams", "Home")</li>
                        <li>@Html.ActionLink("Initiation", "initiation", "Home")</li>
                        <li>@Html.ActionLink("Contactez-nous", "contact", "Home")</li>
                        <li>@Html.ActionLink("Liens", "liens", "Home")</li>
                        @if (ViewBag.IsAuthenticated != null)
                        {
                            if (ViewBag.IsAuthenticated)
                            {
                                <img src="/images/unlocked.jpg" height="20" width="25" />
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("login", "Account")">
                                        <img src="~/Images/locked.jpg" width="10" height="10" />
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <br />
    <br />

    <!-- Start WOWSlider.com BODY section -->

    <div id="wowslider-container1">
        <div class="ws_images">
            <ul>
                <li><img src="data1/images/114.png" alt="114" title="114" id="wows1_0" /></li>
                <li><img src="data1/images/111.jpg" alt="111" title="111" id="wows1_1" /></li>
                <li><img src="data1/images/112.png" alt="112" title="112" id="wows1_2" /></li>
                <li><img src="data1/images/113.png" alt="113" title="113" id="wows1_3" /></li>
                <li><a href="http://wowslider.com/vf"><img src="data1/images/116.png" alt="full screen slider" title="116" id="wows1_4" /></a></li>
                <li><img src="data1/images/117.png" alt="117" title="117" id="wows1_5" /></li>
            </ul>
        </div>
        <span class="wsl"><a href="http://wowslider.com/vu">image carousel</a> by WOWSlider.com v7.2</span>
        <div class="ws_shadow"></div>
    </div>
    <script type="text/javascript" src="engine1/wowslider.js"></script>
    <script type="text/javascript" src="engine1/script.js"></script>

    <!-- End WOWSlider.com BODY section -->

    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            <table border="0">
                <tr>
                    <td valign="top">
                        <a href="http://www.desjardins.com/fr/votre_caisse/accueil.jsp?transit=81520157" id="commandite">
                            <img src="~/Images/Commanditaire/DesjardinsLogo.jpg" />
                        </a>
                        <br />
                        <br />
                        <a href="http://www.bgphonda.com/" id="commanditebgp">
                            <img src="~/Images/Commanditaire/bgp.png" width="100" />
                        </a><br /><br />
                        <a href="http://www.veilleuxetfils.com/" id="commanditeveilleuxetfils">
                            <img src="~/Images/Commanditaire/VeilleuxEtFils.jpg" width="100" height="85" />
                        </a><br /><br />
                            <img src="~/Images/Commanditaire/Ultra_Medic_LG.png" width="100" />
                        <br /><br />
                        <a href="http://www.canac.ca/" id="commanditecanac">
                            <img src="~/Images/Commanditaire/Canac.gif" width="100" />
                        </a><br /><br />
                        <a href="http://www.comact.com/" id="commanditeComact">
                            <img src="~/Images/Commanditaire/comact.png" width="100" />
                        </a><br /><br />
                        <a href="http://www.eqsigma.ca/index.htm" id="commanditeSigma">
                            <img src="~/Images/Commanditaire/Sigma.png" />
                        </a>
                        <br />
                        <a href="http://www.maxi.ca/" id="commanditeMaxi">
                            <img src="~/Images/Commanditaire/Maxi.jpg" width="100" height="65" />
                        </a>
                        <br />
                        <br />
                        <a href="http://www.matiss.com/" id="commanditeMatiss">
                            <img src="~/Images/Commanditaire/matiss-logo.png" />
                        </a>
                        <br /><br />
                        <a href="http://www.groupecanam.com/" id="commanditeCanam">
                            <img src="~/Images/Commanditaire/logo_canam_fr.png" width="100" />
                        </a>
                    </td>
                    <td>
                        @RenderBody()
                    </td>
                </tr>
            </table>
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <p>&copy; @DateTime.Now.Year - Association de baseball mineur de St-Georges.</p>
        </div>
    </footer>
</body>
</html>
